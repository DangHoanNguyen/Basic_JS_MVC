<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User Info</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <form class="col-12 container mt-3" action="/put-crud" method="POST">
        <div class="mb-3 mt-3"><b>EDIT USER'S INFO:</b></div>
        <div class="mb-3">
          <div class="col-3 d-inline-block">
            <label class="form-label">Firstname</label>
            <input type="text" class="form-control" id="firstName" name = "firstName" value="<%= dataToChange.firstName %>">
          </div>
          <div class="col-3 d-inline-block">
            <label class="form-label">Lastname</label>
            <input type="text" class="form-control" id="lastName" name = "lastName" value="<%= dataToChange.lastName %>">
          </div> 
        </div>
        <div class="mb-3 col-6">
          <label class="form-label">Address</label>
          <input type="text" class="form-control" id="address" name = "address" value="<%= dataToChange.address %>">
        </div>
        <div class="mb-3 col-6">
          <label class="form-label">Phone Number</label>
          <input type="text" class="form-control" id="phoneNumber" name = "phoneNumber" value="<%= dataToChange.phoneNumber %>">
        </div>
        <div class="mb-3"> 
          <div class="col-3 d-inline-block">
              <label class="form-label">Gender</label>
              <select id="gender" class="form-select" name = "gender" value="<%= dataToChange.gender === true? 1:0 %>">
                <option value="1">Male</option>
                <option value="0">Female</option>
              </select>
          </div>
        </div>
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <input name="id" value="<%= dataToChange.id %>" type="text" hidden>
        <button type="submit" class="btn btn-primary">Submit change(s)</button>
      </form>
   
</body>
</html>